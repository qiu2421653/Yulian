<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/x5" >

    <com.njkj.yulian.ui.gui.RectRoundImageView
        android:id="@+id/title_image"
        android:layout_width="@dimen/x310"
        android:layout_height="@dimen/y95"
        android:scaleType="centerCrop"
        android:src="@drawable/empty_photo"
        app:borderRadius="3dp"
        app:type="round" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/theme_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="---"
            android:textColor="@color/mylove_item_time" />

        <TextView
            android:id="@+id/theme_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/theme_time"
            android:text="---"
            android:textColor="@color/lovetheme_title" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

</LinearLayout>