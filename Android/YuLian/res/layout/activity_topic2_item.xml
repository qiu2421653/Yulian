<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_list_item_bg" >

    <TextView
        android:id="@+id/tv_topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x9"
        android:layout_marginTop="@dimen/y12"
        android:ellipsize="end"
        android:maxWidth="190dp"
        android:singleLine="true"
        android:text="_ _"
        android:textColor="#E58C7C"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_createTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_topic_title"
        android:layout_marginLeft="@dimen/x3"
        android:layout_toRightOf="@id/tv_topic_title"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="_ _"
        android:textColor="@color/common_time"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_thumb"
        android:layout_width="@dimen/x85"
        android:layout_height="@dimen/x85"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x9"
        android:layout_marginRight="@dimen/x9"
     />

    <TextView
        android:id="@+id/tv_topic_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_topic_title"
        android:layout_marginBottom="@dimen/y6"
        android:layout_marginLeft="@dimen/x9"
        android:layout_marginTop="@dimen/y6"
        android:layout_toLeftOf="@id/iv_thumb"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="_ _"
        android:textColor="@color/edit_text"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_topic_desc"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x9" >

        <TextView
            android:id="@+id/tv_topic_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x4"
            android:background="@drawable/btn_tag_item_bg"
            android:paddingBottom="@dimen/x1"
            android:paddingLeft="@dimen/x7"
            android:paddingRight="@dimen/x7"
            android:paddingTop="@dimen/x1"
            android:singleLine="true"
            android:textColor="@color/bluedc"
            android:textSize="13sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_topic_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 "
            android:textColor="@color/common_time"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论"
            android:textColor="@color/common_time"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/x2"
            android:paddingRight="@dimen/x2"
            android:text=" "
            android:textColor="@color/common_time"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_topic_fork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/common_time"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赞"
            android:textColor="@color/common_time"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@id/ll_detail"
        android:layout_marginTop="@dimen/y12"
        android:background="@color/view" />

</RelativeLayout>