<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
     >
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:padding="20dp"
         android:background="@drawable/play_bg">
		<TextView 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="请输入充值金额"
		    android:textSize="18sp"
		    android:layout_marginLeft="10dp"
		    android:textColor="@color/edit_text"/>
		<TextView 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="当前一元等于十禹币"
		    android:textSize="14sp"
		    android:layout_marginLeft="10dp"
		    android:textColor="@color/text_color"/>
		
		<EditText 
		    android:id="@+id/myintegrall_edit"
		    android:layout_width="match_parent"
		    android:layout_height="45dp"
		    android:layout_margin="10dp"
		    android:paddingLeft="10dp"
		    android:inputType="number"
		    android:maxLines="1"
		    android:background="@drawable/edit_playbg"
		    android:hint="请输入要充值的金额"/>   

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/myintegrall_disimiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/play_disimiss"
                android:textColor="@color/edit_text"
                android:text="取消" />

            <Button
                android:id="@+id/myintegrall_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/white"
                android:background="@drawable/play_bgtop"
                android:text="充值" />
        </RelativeLayout>
        </LinearLayout>

</LinearLayout>