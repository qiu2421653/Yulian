<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_topci_dialog"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dip"
        android:layout_marginLeft="17.33dip"
        android:layout_marginRight="17.33dip"
        android:background="@drawable/bg_pop"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_title"
                style="@style/title_common_custom_dialog" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_pop_line_h"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:id="@+id/BtnLayout"
            android:layout_width="fill_parent"
            android:layout_height="48dip"
            android:minWidth="250dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/btn_left"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/sel_btn_bg_custom_dialog_left"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_left"
                    style="@style/btn_common_custom_dialog"
                    android:duplicateParentState="true" />
            </LinearLayout>

            <ImageView
                android:id="@+id/sp_line"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="6.66dip"
                android:layout_marginTop="6.66dip"
                android:background="@drawable/img_pop_line_v"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:id="@+id/btn_right"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/sel_btn_bg_custom_dialog_right"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_right"
                    style="@style/btn_common_custom_dialog"
                    android:duplicateParentState="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>