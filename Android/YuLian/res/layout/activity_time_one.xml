<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/mixed_feed_track"
        android:layout_width="32.0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp" >

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="10dp"
            android:ems="1"
            android:gravity="center"
            android:textColor="@color/common_text"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/moment_timeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/moment_smalldot"
            android:layout_width="10.0dip"
            android:layout_height="10.0dip"
            android:layout_marginLeft="36.9dip"
            android:layout_marginTop="23.0dip"
            android:src="@drawable/cover_nowdot" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/moment_timeline"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_first"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/empty_photo" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:lines="5"
            android:textColor="@color/common_tv"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>