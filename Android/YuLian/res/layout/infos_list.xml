<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/news_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@null" />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/mylove_item_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x2"
        android:singleLine="false"
        android:text=" - - "
        android:textColor="#656565"
        android:textSize="@dimen/a_font_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/mylove_item_bg" >

        <ImageView
            android:id="@+id/iv_favort"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginRight="@dimen/x2"
            android:src="@drawable/heart" />

        <TextView
            android:id="@+id/tv_fork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_favort"
            android:text="0"
            android:textColor="@color/common_tv"
            android:textSize="@dimen/e_font_size" />

        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x22"
            android:layout_marginRight="@dimen/x2"
            android:layout_toRightOf="@id/iv_favort"
            android:src="@drawable/iv_comment" />

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_comment"
            android:text="0"
            android:textColor="@color/common_tv"
            android:textSize="@dimen/e_font_size" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x2"
            android:layout_marginRight="@dimen/x5"
            android:textColor="@color/common_tv"
            android:textSize="@dimen/e_font_size" />
    </RelativeLayout>

</LinearLayout>