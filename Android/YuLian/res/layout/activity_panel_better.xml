<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100.0dip"
    android:orientation="horizontal"
    android:paddingBottom="5.0dip"
    
    android:paddingLeft="40.0dip"
    android:paddingRight="40.0dip" >

    <LinearLayout
        android:id="@id/origin"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="63.0dip"
            android:layout_height="63.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5.0dip" >

            <ImageView
                android:id="@id/origin_image"
                android:layout_width="63.0dip"
                android:layout_height="63.0dip"
                android:background="@drawable/panel_bg_selector"
                android:scaleType="center"
                android:src="@drawable/origin_selector" />

            <View
                android:id="@id/origin_line"
                android:layout_width="fill_parent"
                android:layout_height="2.0dip"
                android:layout_alignParentBottom="true"
                android:background="@color/darkSkyBlue"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@id/origin_text"
            style="@style/PanelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/origin_image"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/person"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1.0"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="63.0dip"
            android:layout_height="63.0dip"
            android:layout_margin="5.0dip" >

            <ImageView
                android:id="@id/person_image"
                android:layout_width="63.0dip"
                android:layout_height="63.0dip"
                android:background="@drawable/panel_bg_selector"
                android:scaleType="center"
                android:src="@drawable/person_selector" />

            <View
                android:id="@id/person_line"
                android:layout_width="fill_parent"
                android:layout_height="2.0dip"
                android:layout_alignParentBottom="true"
                android:background="@color/darkSkyBlue"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@id/person_text"
            style="@style/PanelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/person_image" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/food"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1.0"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="63.0dip"
            android:layout_height="63.0dip"
            android:layout_margin="5.0dip" >

            <ImageView
                android:id="@id/food_image"
                android:layout_width="63.0dip"
                android:layout_height="63.0dip"
                android:background="@drawable/panel_bg_selector"
                android:scaleType="center"
                android:src="@drawable/food_selector" />

            <View
                android:id="@id/food_line"
                android:layout_width="fill_parent"
                android:layout_height="2.0dip"
                android:layout_alignParentBottom="true"
                android:background="@color/darkSkyBlue"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@id/food_text"
            style="@style/PanelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/food_image" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/landscape"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1.0"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="63.0dip"
            android:layout_height="63.0dip"
            android:layout_margin="5.0dip" >

            <ImageView
                android:id="@id/landscape_image"
                android:layout_width="63.0dip"
                android:layout_height="63.0dip"
                android:background="@drawable/panel_bg_selector"
                android:scaleType="center"
                android:src="@drawable/landscape_selector" />

            <View
                android:id="@id/landscape_line"
                android:layout_width="fill_parent"
                android:layout_height="2.0dip"
                android:layout_alignParentBottom="true"
                android:background="@color/darkSkyBlue"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@id/landscape_text"
            style="@style/PanelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/landscape_image" />
    </LinearLayout>

</LinearLayout>