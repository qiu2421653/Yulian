<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.njkj.yulian.ui.activity.AddConcernActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:background="@drawable/btn_list_item_bg" >

        <com.njkj.yulian.ui.gui.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/y25"
            android:layout_height="@dimen/y25"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x9"
            android:layout_marginTop="@dimen/y5"
            android:src="@drawable/logo"
            app:border_color="@color/common_text"
            app:border_width="0.5dp" />

        <TextView
            android:id="@+id/tv_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/y5"
            android:layout_marginTop="@dimen/y5"
            android:layout_toRightOf="@id/iv_icon"
            android:textColor="@color/common_text"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/rl_focus"
            android:layout_width="@dimen/x70"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x9"
            android:clickable="true" >

            <TextView
                android:layout_width="@dimen/x55"
                android:layout_height="@dimen/y17"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_guide"
                android:gravity="center"
                android:text="@string/_cancel"
                android:textColor="@color/bluedc"
                android:textSize="@dimen/e_font_size" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>