<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/id_switch_tab_ll"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/id_article_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/_article"
            android:textColor="@color/bluedc"
            android:textSize="16dip" />

        <ImageView
            android:layout_width="0.4dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@color/view" />

        <TextView
            android:id="@+id/id_stopy_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/_story"
            android:textColor="@color/common_tv"
            android:textSize="16dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_scan"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:gravity="center" >

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:background="@drawable/map"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:gravity="center" >

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/search_tips"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>